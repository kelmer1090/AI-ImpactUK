{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:frontend",
      "type": "npm",
      "script": "dev",
      "path": "frontend/approuter", 
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "label": "dev:backend",
      "type": "shell",
      "command": "${workspaceFolder}/backend/.venv/bin/uvicorn",
      "args": ["main:app", "--reload", "--port", "8000"],
      "options": { "cwd": "${workspaceFolder}/backend" },
      "isBackground": true
    },
    {
      "label": "lint",
      "type": "npm",
      "script": "lint",
      "path": "frontend/approuter"
    },
    {
      "label": "test",
      "type": "shell",
      "command": "pytest",
      "options": { "cwd": "${workspaceFolder}/backend" }
    }
  ]
}
