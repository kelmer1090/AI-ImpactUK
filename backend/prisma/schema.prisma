datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  dataTypes   String
  modelType   String
  createdAt   DateTime     @default(now())
  assessments Assessment[]
}

model Assessment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  flags       String   // Store flags as a JSON string
  project     Project? @relation(fields: [projectId], references: [id])
  projectId   Int?
}
